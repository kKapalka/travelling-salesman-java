                        <Label layoutX="80.0" layoutY="103.0" text="Number of specimens per generation" />
                        <Label layoutX="80.0" layoutY="148.0" text="Number of cities" />
                        <TextField fx:id="joiningPointInput" layoutX="21.0" layoutY="197.0" prefHeight="25.0" prefWidth="50.0" />
                        <Label layoutX="80.0" layoutY="187.0" prefHeight="45.0" prefWidth="298.0" text="Joining point of the chromosomes for the purpose of offspring production (between 1 and number of cities)" wrapText="true" />
                     </children></AnchorPane>
