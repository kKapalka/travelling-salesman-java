    </padding>
   <children>
      <TabPane prefHeight="400.0" prefWidth="560.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Settings">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
